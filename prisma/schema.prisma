// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String?
  password String
  role      String   @default("USER")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  fisheries Fishery[]
  searches  Search[]
}

model Fishery {
  id        Int     @id @default(autoincrement())
  name      String
  latitude  Float
  longitude Float
  userId    Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user    User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  searches Search[]

  @@unique([userId, name])
}

model Search {
  id        Int     @id @default(autoincrement())
  fisheryId Int
  userId    Int
  date      DateTime
  
  // Dados meteorológicos
  temperature Float?
  pressure    Float?
  windSpeed   Float?
  windDirection String?
  humidity    Float?
  cloudCover  Float?
  
  // Dados de maré (água salgada)
  tideHeight  Float?
  tideType    String? // "high" ou "low"
  
  // Dados solunares
  moonPhase   String?
  solunarScore Float?
  
  // Score final de pesca
  fishingScore Float?
  recommendation String? // "Excelente", "Boa", "Regular", "Ruim"
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  fishery Fishery @relation(fields: [fisheryId], references: [id], onDelete: Cascade)
  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([fisheryId, date])
}
